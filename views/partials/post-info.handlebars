<article class='post ui green segment'>
  <div class='title'>
    <h3 class='ui green header'>{{title}}</h3>
    <span>{{post_description}}</span>
  </div>
  <br />
  <div class='meta'>
    by
    <span id='user'>{{user.username}}</span>
    on
    {{format_date created_at}}
    |
    <a href='/post/{{id}}'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</a>
  </div>
</article>