{{#each this}}
  <div class='ui centered card'>
    <div class='ui card'>
      <div class='image'>
        <img src='/public/images/user_{{random_num 1 4}}.png' />
      </div>
      <div class='content'>
        <a class='header'>{{user.username}}</a>
        <div class='meta'>
          <span class='date'>on {{format_date created_at}}</span>
        </div>
        <div class='description'>
          {{comment_text}}
        </div>
      </div>
    </div>
  </div>
{{/each}}